---
import HeaderLink from './HeaderLink.astro';
import LinkedIn from './socials/LinkedIn.astro';
import Github  from './socials/Github.astro';
import { SITE_TITLE } from '../consts';

interface Props {
	class?: string;
}
---

<header class:list={['content-grid', Astro.props?.class]}>
	<nav class="breakout">
		<h2 class="site-title"><a href="/">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="/">Home</HeaderLink>			
			<HeaderLink href="/about">About</HeaderLink>
		</div>		
		<div class="social-links">
			<LinkedIn class="social-link"/>
			<Github class="social-link"/>
		</div>
	</nav>
</header>
<style>
	header {
		position: sticky;
		top: 0;				
		background-color: var(--surface-2);
		box-shadow: var(--shadow-1);
		padding: var(--size-3) var(--size-3);				
		z-index: var(--layer-important);
	}

	h2 {
		font-size: var(--font-size-fluid-2);
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;		
	}

	nav a, .social-link {
		text-decoration: none;
		padding: var(--size-3) var(--size-2);
	}
	nav a.active, .social-link.active {
		text-decoration: none;
	}
	.social-links,
	.social-links .socail-link {
		display: flex;		
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
