---
import type {ResumeLink} from '@components/resume/resume-types';
import {Phone, Mail, Link2, } from 'lucide';
import LucideIcon from '@components/LucideIcon.astro';
import LinkedInIcon from '@components/icons/LinkedInIcon.astro';
import GithubIcon from '@components/icons/GithubIcon.astro';
import ContactLink from './ContactLink.astro';

type Props = {
    links: ResumeLink[];
};

const {links} = Astro.props;
---

<aside class="contact-info">{
    links.map(({name, display, url}) => <ContactLink {url} value={display}>
        {name === 'phone' && <LucideIcon slot="icon" icon={Phone} style="display:block;"/>}
        {name === 'email' && <LucideIcon slot="icon" icon={Mail} style="display:block;"/>}
        {name === 'website' && <LucideIcon slot="icon" icon={Link2} style="display:block;"/>}
        {name === 'linkedin' && <LinkedInIcon slot="icon"/>}
        {name === 'github' && <GithubIcon slot="icon"/>}
    </ContactLink>)
}</aside>

<style>
    .contact-info {
        --font-size: var(--font-size-0);
        /* margin-block-end: var(--size-2); */
        /* display: grid; */
        /* align-self: center; */
        /* align-items: flex-end; */
        column-gap: var(--size-3);
        row-gap: var(--size-1);
        /* grid-template-columns: max-content max-content; */
        /* grid-auto-rows: min-content; */
        display: flex;
        flex-flow: row wrap;
        max-inline-size: min-content;        
    }

    .contact-info {
        
    }

    :global(.contact-info > *) {
        flex: 1 1 auto;
    }
</style>