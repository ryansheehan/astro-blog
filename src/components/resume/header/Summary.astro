---
type Props = {
    summary: string;
}

const {summary} = Astro.props;
---

<summary>{summary}</summary>

<style>
    summary {
        font-size: var(--font-size-1);
        max-inline-size: 100%;
        margin: 0;
        background-color: var(--gray-3);     
        font-weight: var(--font-weight-4);   
        /* font-style: italic; */
    }
</style>